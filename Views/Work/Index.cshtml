@{
    ViewData["Title"] = "Work";
}

<style>
    .get-demo-section {
        padding: 60px 20px;
        text-align: center;
        background-color: #f9f9f9;
    }

    .demo-subtitle {
        font-size: 14px;
        text-transform: uppercase;
        color: #666;
        margin-bottom: 10px;
    }

    .demo-title {
        font-size: 32px;
        font-weight: bold;
        margin-bottom: 30px;
        color: #333;
    }

    .demo-form {
        max-width: 400px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-group label {
        display: block;
        font-size: 14px;
        color: #666;
        margin-bottom: 5px;
    }

    .form-group input {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 8px;
        outline: none;
    }

    .form-group input::placeholder {
        color: #aaa;
    }

    .get-demo-button {
        width: 100%;
        padding: 15px;
        font-size: 18px;
        font-weight: bold;
        color: #fff;
        background: linear-gradient(to right, #4a00e0, #8e2de2);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .get-demo-button:hover {
        background: linear-gradient(to right, #3a00c0, #7a23c2);
    }

    .portfolio-section {
        padding: 60px 20px;
        text-align: center;
    }

    .portfolio-title {
        font-size: 32px;
        margin-bottom: 40px;
        color: #333;
    }

    .portfolio-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .portfolio-item:hover {
        transform: scale(1.05);
    }

    .portfolio-image-container {
        height: 200px; /* Fixed height for consistent sizing */
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .portfolio-image {
        object-fit: contain;
        width: 100%;
        height: 100%;
    }

    /* Center carousel controls vertically */
    .carousel-control-prev,
    .carousel-control-next {
        width: 50px;
        height: 50px;
        top: 50%;
        transform: translateY(-50%);
    }

    /* Custom arrow styles */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-image: none;
        font-size: 32px;
        color: black;
    }

    .carousel-control-prev-icon::after {
        content: '‹';
    }

    .carousel-control-next-icon::after {
        content: '›';
    }

    /* Optional hover effect */
    .carousel-control-prev:hover .carousel-control-prev-icon,
    .carousel-control-next:hover .carousel-control-next-icon {
        color: #555;
    }
    
    .portfolio-item {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        background-color: #fff;
    }

    .portfolio-content {
        padding: 20px;
        text-align: left;
    }

    .portfolio-item-title {
        font-size: 20px;
        margin: 0 0 10px;
        color: #4a00e0;
    }

    .portfolio-item-description {
        font-size: 16px;
        color: #666;
    }
</style>

<section class="get-demo-section">
    <div class="container">
        <p class="demo-subtitle">INTERESTED?</p>
        <h2 class="demo-title">Get demo</h2>

        <form class="demo-form">
            <div class="form-group">
                <label for="name">Your name</label>
                <input type="text" id="name" name="name" placeholder="Your name" required>
            </div>
            <div class="form-group">
                <label for="email">Your e-mail</label>
                <input type="email" id="email" name="email" placeholder="Your e-mail" required>
            </div>
            <button type="submit" class="get-demo-button">Get demo</button>
        </form>
    </div>
</section>

<section class="portfolio-section py-5">
    <h2 class="portfolio-title text-center mb-4">Our Work</h2>
    <div id="portfolioCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="portfolio-item text-center h-100">
                            <div class="portfolio-image-container mb-3">
                                <img src="~/images/mpower.png" alt="M Power" class="portfolio-image img-fluid rounded">
                            </div>
                            <div class="portfolio-content">
                                <h3 class="portfolio-item-title">M Power</h3>
                                <p class="portfolio-item-description">A dynamic platform for youth empowerment in Moldova, providing resources, mentorship, and training programs. M Power enables young people to gain skills, build networks, and explore opportunities for career development and civic engagement.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="portfolio-item text-center h-100">
                            <div class="portfolio-image-container mb-3">
                                <img src="~/images/1.jpeg" alt="Procuratura Anticoruptie Platform" class="portfolio-image img-fluid rounded">
                            </div>
                            <div class="portfolio-content">
                                <h3 class="portfolio-item-title">Procuratura Anticoruptie Platform</h3>
                                <p class="portfolio-item-description">We developed a secure web platform for Moldova’s Anti-Corruption Prosecutor’s Office. This solution streamlines case management and promotes transparency, allowing the ministry to effectively combat corruption through improved workflows and real-time reporting.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="portfolio-item text-center h-100">
                            <div class="portfolio-image-container mb-3">
                                <img src="~/images/mrdp.png" alt="MRDP" class="portfolio-image img-fluid rounded">
                            </div>
                            <div class="portfolio-content">
                                <h3 class="portfolio-item-title">MRDP (Moldovan Rural Development Program)</h3>
                                <p class="portfolio-item-description">An impactful project aimed at improving the quality of life in rural Moldova. This platform supports local government and NGOs by providing tools for monitoring rural development projects, tracking progress, and engaging with communities for feedback.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="portfolio-item text-center h-100">
                            <div class="portfolio-image-container mb-3">
                                <img src="~/images/mpower.png" alt="M Power" class="portfolio-image img-fluid rounded">
                            </div>
                            <div class="portfolio-content">
                                <h3 class="portfolio-item-title">M Power</h3>
                                <p class="portfolio-item-description">A dynamic platform for youth empowerment in Moldova, providing resources, mentorship, and training programs. M Power enables young people to gain skills, build networks, and explore opportunities for career development and civic engagement.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="portfolio-item text-center h-100">
                            <div class="portfolio-image-container mb-3">
                                <img src="~/images/3.png" alt="CNAS" class="portfolio-image img-fluid rounded">
                            </div>
                            <div class="portfolio-content">
                                <h3 class="portfolio-item-title">CNAS</h3>
                                <p class="portfolio-item-description">A comprehensive digital solution built for Romania’s Ministry of Health, streamlining health insurance services. The platform allows citizens easy access to essential services, claims processing, and information on healthcare entitlements.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

