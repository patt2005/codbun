<script>
    document.addEventListener("DOMContentLoaded", function () {
        const tabLinks = document.querySelectorAll(".mainfeatures_tabs-link");
        const tabPanes = document.querySelectorAll(".mainfeatures_tabs-pane");

        tabLinks.forEach((link) => {
            link.addEventListener("click", function (e) {
                e.preventDefault();
                const targetTab = this.getAttribute("data-tab");

                // Remove active state from all links and panes
                tabLinks.forEach((link) => link.classList.remove("w--current"));
                tabPanes.forEach((pane) => (pane.style.display = "none"));

                // Add active state to the clicked link and corresponding pane
                this.classList.add("w--current");
                document.getElementById(targetTab).style.display = "block";
            });
        });

        // Set the default active tab on page load
        document.querySelector(".mainfeatures_tabs-link[data-tab='tab3']").click();
    });
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', () => {
                const answer = question.nextElementSibling;
                const toggleButton = question.querySelector('.faq-toggle');

                // Toggle answer display
                if (answer.style.display === 'block') {
                    answer.style.display = 'none';
                    toggleButton.textContent = '+';  // Switch to "+" when collapsed
                } else {
                    answer.style.display = 'block';
                    toggleButton.textContent = '×';  // Switch to "×" when expanded
                }
            });
        });
    });
</script>

