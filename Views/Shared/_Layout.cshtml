<!DOCTYPE html>
<html lang="en">

<style>
    .footer {
        background-color: #222;
        color: #aaa;
        padding: 3rem 1rem;
    }

    .footer a {
        color: #aaa;
        transition: color 0.3s ease;
    }

    .footer a:hover {
        color: #fff;
    }

    .footer-heading {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #ddd;
    }

    .newsletter-form .form-control {
        border-radius: 30px;
        padding: 0.75rem 1rem;
    }

    .newsletter-form .btn-primary {
        border-radius: 30px;
        background: linear-gradient(90deg, #6c63ff, #3b3be1);
        border: none;
        padding: 0.5rem 1.5rem;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .footer-link {
        color: #aaa;
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .footer-link:hover {
        color: #fff;
    }

    .footer-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 2rem 0;
    }

    .footer .list-inline-item a {
        font-size: 0.9rem;
        color: #aaa;
    }

    .footer .list-inline-item a:hover {
        color: #fff;
    }

    .footer small {
        font-size: 0.8rem;
        color: #777;
    }

    .newsletter-form {
        flex-direction: column;
        gap: 0.75rem;
    }
    .newsletter-form .btn-primary {
        width: 100%;
    }
</style>

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/codbun-91733e.webflow.d505c2c8b.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="nav-padding" style="padding: 0 20%;">
            <div class="container-fluid d-flex align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="CodBun Logo" style="height: 60px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">
                    <ul class="navbar-nav flex-grow-1 d-flex align-items-center">
                        <li class="nav-item" style="margin-bottom: 15px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">About</a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Work" asp-action="Index">Work</a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Team" asp-action="Index">Team</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


<footer class="footer bg-dark text-light py-5">
    <div class="container">
        <div class="row justify-content-between align-items-start mb-4">
            <!-- Newsletter Section -->
            <div class="col-lg-4 col-md-6 mb-4">
                <p class="mb-2">Join our newsletter to stay up to date on features and releases.</p>
                <form class="d-flex newsletter-form mb-2" style="margin-top: 1rem">
                    <input type="email" class="form-control me-2" placeholder="Enter your email" aria-label="Email">
                    <button class="btn btn-primary" type="submit">Join now</button>
                </form>
                <small class="text-muted">
                    By subscribing you agree to our <a href="#" class="text-decoration-underline">Privacy Policy</a> and provide consent to receive updates from our company.
                </small>
            </div>

            <!-- Product Links Section -->
            <div class="col-lg-2 col-md-3 mb-4">
                <h5 class="footer-heading">Product</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="footer-link">Home</a></li>
                    <li><a href="#" class="footer-link">Product</a></li>
                    <li><a href="#" class="footer-link">About</a></li>
                    <li><a href="#" class="footer-link">Pricing</a></li>
                </ul>
            </div>

            <!-- Utility Links Section -->
            <div class="col-lg-2 col-md-3 mb-4">
                <h5 class="footer-heading">Utility</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="footer-link">Licenses</a></li>
                    <li><a href="#" class="footer-link">Changelog</a></li>
                    <li><a href="#" class="footer-link">Instructions</a></li>
                    <li><a href="#" class="footer-link">Style Guide</a></li>
                </ul>
            </div>

            <!-- Follow Us Section -->
            <div class="col-lg-2 col-md-3 mb-4">
                <h5 class="footer-heading">Follow Us</h5>
                <ul class="list-unstyled">
                    <li><a href="#" class="footer-link">Facebook</a></li>
                    <li><a href="#" class="footer-link">Instagram</a></li>
                    <li><a href="#" class="footer-link">Twitter</a></li>
                    <li><a href="#" class="footer-link">LinkedIn</a></li>
                </ul>
            </div>
        </div>

        <hr class="footer-divider">

        <!-- Bottom Footer Section -->
        <div class="d-flex justify-content-between align-items-center pt-3">
            <small class="text-muted">Chișinău, Republica Moldova, 2024</small>
            <ul class="list-inline mb-0">
                <li class="list-inline-item"><a href="#" class="footer-link">Privacy Policy</a></li>
                <li class="list-inline-item"><a href="#" class="footer-link">Terms of Service</a></li>
                <li class="list-inline-item"><a href="#" class="footer-link">Cookie Settings</a></li>
            </ul>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>